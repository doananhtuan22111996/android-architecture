        <item name="android:textAppearance">@style/TextAppearance.FontPath.Gilroy.Body_15_Regular
        </item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="hintTextAppearance">@style/TextAppearance.FontPath.Gilroy.Body_13_Regular</item>
        <item name="android:textColorHint">@color/color_edt_hint</item>
        <item name="android:textColor">@color/color_4</item>
        <item name="android:background">@drawable/bg_input_type_selector</item>
        <item name="android:paddingStart">@dimen/padding_8</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:paddingEnd">@dimen/padding_8</item>
    </style>

</resources>