<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="momentComment"
            type="vn.geekup.app.model.moment.MomentCommentModelV" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMomentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_4"
        android:background="@color/color_white"
        android:paddingHorizontal="@dimen/padding_16"
        android:paddingVertical="@dimen/padding_12">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/size_37"
            android:layout_height="@dimen/size_37"
            android:background="@drawable/bg_avatar_moment"
            app:avatarImageUrl="@{momentComment.commenterAvatarUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommentName"
            style="@style/TextAppearance.FontPath.Gilroy.Body_15_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:text="@{momentComment.commenterName}"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommentDescription"
            style="@style/TextAppearance.FontPath.Gilroy.Body_15_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{momentComment.content}"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toEndOf="@id/ivAvatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommentTime"
            style="@style/TextAppearance.FontPath.Gilroy.Caption_12_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:textColor="@color/color_5"
            app:createdAt="@{momentComment.createdAt}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvCommentName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
