<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_workflow"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="vn.root.app.pages.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="vn.root.app.pages.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="vn.root.app.pages.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/homeLocalFragment"
        android:name="vn.root.app.pages.homeLocal.HomeLocalFragment"
        android:label="fragment_home_local"
        tools:layout="@layout/fragment_home" />

    <action
        android:id="@+id/navigateToHomeLocal"
        app:destination="@id/homeLocalFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/nav_root" />

</navigation>