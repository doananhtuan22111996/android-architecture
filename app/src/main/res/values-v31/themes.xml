<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SkeletonTheme.NoActionBar.SplashBackground" parent="Theme.SkeletonTheme.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_primary_dark</item>
        <item name="colorOnSecondary">@color/color_on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@drawable/bg_splash_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_app</item>
        <item name="android:windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.SkeletonTheme</item>
    </style>
</resources>